@model TaskMasterPro.Models.TaskModel
@{
    ViewData["Title"] = "Delete Task";
}

<h2 class="mb-4 text-danger">⚠️ Confirm Delete</h2>

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <h4 class="card-title text-danger">@Model.Title</h4>
        <p class="text-muted">Are you sure you want to delete this task? This action cannot be undone.</p>

        <dl class="row">
            <dt class="col-sm-3 fw-semibold">📝 Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3 fw-semibold">📂 Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3 fw-semibold">⚡ Priority</dt>
            <dd class="col-sm-9">@Model.Priority</dd>

            <dt class="col-sm-3 fw-semibold">📅 Due Date</dt>
            <dd class="col-sm-9">@Model.DueDate.ToString("dd MMM yyyy")</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-outline-danger px-4">🗑️ Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">↩ Cancel</a>
            </div>
        </form>
    </div>
</div>

